@model IEnumerable<Wardrobe.Models.ProductsTable>

@{
    ViewBag.Title = "Index";
}

<h2>Match An Outfit</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-sm-12">
            <div class="thumbnail">
                <div class="caption">
                    <h2><span class ="label label-primary">Product Type</span>| @Html.DisplayFor(modelItem => item.ProductTypeTable.ProductType)</h2>
                    <p>@Html.DisplayFor(modelItem => item.TopsTable.Name)</p>
                    <p>@Html.DisplayFor(modelItem => item.BottomsTable.Name)</p>
                    <p>@Html.DisplayFor(modelItem => item.ShoesTable.Name)</p>
                    <p>@Html.DisplayFor(modelItem => item.AccessoriesTable.Name)</p>
                    <p>@Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })</p>
                </div>
            </div>
        </div>
    </div>
}

